<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerViewContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.mivideo.mifm.player.FixedVideoView
        android:id="@+id/videoPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.mivideo.mifm.player.PortraitVideoView
        android:id="@+id/mediaPlayerController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.mivideo.mifm.player.FullscreenVideoView
        android:fitsSystemWindows="true"
        android:id="@+id/fullscreenController"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>