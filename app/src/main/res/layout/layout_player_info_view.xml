<?xml version="1.0" encoding="utf-8"?>
<com.mivideo.mifm.ui.widget.scale.ScalingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_player_info_confirm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_corner_edge"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp">

        <ImageView
            android:id="@+id/iv_player_info_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            app:srcCompat="@drawable/ic_retry" />

        <TextView
            android:id="@+id/tv_player_info_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_player_info_right_icon"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="7dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_right_arrow" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_player_info_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/not_found_network"
        android:textColor="@color/white"
        android:textSize="12sp" />

</com.mivideo.mifm.ui.widget.scale.ScalingLinearLayout>