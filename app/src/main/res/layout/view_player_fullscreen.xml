<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/video_controller_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/defaultImageLayerColor">

        <ImageView
            android:id="@+id/video_controller_lock_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:src="@drawable/ic_player_unlock"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/video_controller_play_button"
            android:layout_width="32dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_player_stop" />

        <ImageView
            android:id="@+id/video_controller_next_button"
            android:layout_width="34dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="185dp"
            app:srcCompat="@drawable/ic_player_next" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <com.mivideo.mifm.ui.widget.TintImageView
                android:id="@+id/video_controller_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:src="@drawable/icon_fullscreen_back"
                app:tintColor="@color/white_theme_selector_color" />

            <TextView
                android:id="@+id/video_controller_title_view"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:textColor="#ffffff"
                android:textSize="16sp"
                tools:text="这是一个很长很长的title" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/video_controller_shared_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/video_controller_shared_weixin_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:src="@drawable/icon_shared_weixin" />

            <ImageView
                android:id="@+id/video_controller_shared_weixinfriend_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:src="@drawable/icon_shared_weixinfriend" />

            <ImageView
                android:id="@+id/video_controller_shared_weibo_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:src="@drawable/icon_shared_weibo" />

            <ImageView
                android:id="@+id/video_controller_shared_qq_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:src="@drawable/icon_shared_qq" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/video_controller_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/video_controller_current_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="0dp"
                android:text="@string/video_default_delay"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/video_controller_seekbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:background="@null"
                android:max="100"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:progressDrawable="@drawable/seek_progress"
                android:splitTrack="false"
                android:thumb="@drawable/seek_thumb" />

            <TextView
                android:id="@+id/video_controller_duration_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="0dp"
                android:text="@string/video_default_delay"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/video_controller_resolution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textColor="@color/white_text_selector"
                tools:text="超清" />

            <ImageView
                android:id="@+id/video_controller_zoom_view"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/ic_player_exit_fullscreen" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/video_controller_fas_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1e000000"
        tools:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/video_controller_fas_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_back_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_controller_fas_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/video_controller_fas_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="0dp"
                    android:text="@string/video_default_delay"
                    android:textColor="#0fcc0d"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/video_controller_fas_time_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_controller_fas_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/video_controller_fas_current_time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="0dp"
                    android:text="@string/video_default_delay"
                    android:textColor="#0fcc0d"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="0dp"
                    android:text=" / "
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/video_controller_fas_duration_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="0dp"
                    android:text="@string/video_default_delay"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>