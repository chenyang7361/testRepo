<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="332dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_bg_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_login_bg_head" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="193dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_login_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="@string/logining"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.mivideo.mifm.ui.widget.CustomStatusView
                android:id="@+id/loading_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layerType="software"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                app:progress_color="@color/white"
                app:progress_radius="25dp"
                app:progress_width="3dp" />
        </LinearLayout>


    </FrameLayout>


</LinearLayout>