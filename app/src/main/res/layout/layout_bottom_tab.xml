<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_nav_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <ImageView
        android:id="@+id/iv_tab_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/home_bar_icon_home_pressed" />

    <TextView
        android:id="@+id/tv_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_tab_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/common_black"
        android:textSize="10sp"
        android:visibility="gone"
        tools:text="首页" />

    <ImageView
        android:id="@+id/iv_red_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignTop="@id/iv_tab_icon"
        android:layout_toRightOf="@id/iv_tab_icon"
        android:src="@drawable/home_new_marker"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>
