<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_collect_item_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_marginStart="13dp"
        android:src="@color/themeColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_collect_item_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_collect_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_collect_item_icon"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_toRightOf="@+id/iv_collect_item_icon"
            android:lines="1"
            android:textColor="@color/text_dark_black"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:text="生命中的灯塔" />

        <TextView
            android:id="@+id/tv_collect_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_collect_item_title"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_collect_item_icon"
            android:lines="1"
            android:textColor="@color/text_recom_more"
            android:textSize="11dp"
            android:textStyle="bold"
            tools:text="力学教授" />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="13dp"
        android:background="@color/lineColor" />
</RelativeLayout>